{
  "name": "codexflow",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + React + Vite + node-pty + xterm WSL terminal host (UI only, minimal bridge)",
  "license": "Apache-2.0",
  "author": "Lulu (GitHub: lulu-sk)",
  "homepage": "https://github.com/lulu-sk/CodexFlow",
  "repository": {
    "type": "git",
    "url": "https://github.com/lulu-sk/CodexFlow.git"
  },
  "bugs": {
    "url": "https://github.com/lulu-sk/CodexFlow/issues"
  },
  "main": "dist/electron/main.js",
  "type": "commonjs",
  "scripts": {
    "postinstall": "npm run build:electron && electron-builder install-app-deps",
    "dev:web": "vite --config web/vite.config.ts",
    "dev:electron": "cross-env DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm:dev:web\" \"npm:dev:electron\"",
    "dev:electron:dist": "cross-env DEV_SERVER_URL=file://local electron .",
    "dev:dist": "npm run build:electron && npm run build:web && npm run dev:electron:dist",
    "build:electron": "node scripts/clean-electron-dist.cjs && tsc -p tsconfig.electron.json",
    "build:web": "vite build --config web/vite.config.ts",
    "build": "npm run build:electron && npm run build:web && electron-builder",
    "i18n:report": "node scripts/i18n-check.js STRICT=0",
    "i18n:check": "node scripts/i18n-check.js",
    "prepare": "husky install",
    "test": "vitest run"
  },
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "chokidar": "^3.6.0",
    "undici": "^6.18.2"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "fuzzysort": "^2.0.4",
    "husky": "^9.0.11",
    "i18next": "^23.11.5",
    "i18next-icu": "^2.4.0",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.453.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vitest": "^2.0.5"
  },
  "overrides": {},
  "build": {
    "appId": "com.codexflow.app",
    "productName": "CodexFlow",
    "afterPack": "./scripts/after-pack.js",
    "files": [
      "dist/electron/**",
      "web/dist/**",
      "package.json",
      "LICENSE",
      "NOTICE"
    ],
    "compression": "maximum",
    "directories": {
      "buildResources": "build"
    },
    "asarUnpack": [
      "node_modules/@lydell/node-pty/build/Release/**"
    ],
    "extraResources": [
      {
        "from": "vendor/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "publisherName": [
        "Lulu"
      ],
      "artifactName": "CodexFlow-${version}-Setup.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "differentialPackage": false
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage"
      ],
      "maintainer": "Lulu <58587930+lulu-sk@users.noreply.github.com>",
      "category": "Development"
    },
    "electronLanguages": [
      "en-US",
      "zh-CN"
    ]
  }
}
